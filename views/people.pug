        ul 
          li  
           a(href="http://localhost:3000/contribut") Contribute
          li
           a(href="http://localhost:3000/search") Search
          li 
           a(href="http://localhost:3000/login") Sign In/Up
          li 
           a(href="http://localhost:3000/ownprofille") Profile
          li 
           a(href="http://localhost:3000") Home 
        br
        
        h3 Name: #{person.name} 
        hr
        form(action="/people/:name" method = "post")
          input(type="hidden" name="peopleName" value = person.name)
          input(type="submit" value=peopleFollowState)
        h4 Frequent Collaborators:
        hr
        each Collaborator in Collaborators
            a(href="/people/" + Collaborator) #{Collaborator}
            br
        hr    
        h4 Working histor:
        if Career.Director
          h5 Director:
          for movie in Career.Director
            a(href="/movies/" + movie.Title) #{movie.Title}
          br
        
        if Career.Writer
          h5 Writer:
          for movie in Career.Writer
            a(href="/movies/" + movie.Title) #{movie.Title}
          br
       
        if Career.Actors
          h5 Actors:
          for movie in Career.Actors
            a(href="/movies/" + movie.Title) #{movie.Title}
          br

