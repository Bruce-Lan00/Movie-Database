body
    script(src="/app/js/addReview.js")

    div#main
        div(class='header')
            div(class='center')
              <form class="form", action="/search", method = "post">  
              <input class="input" type="search" id="query" name="q" placeholder="Search Title, Genre, Actor Name..."">
              <button class = "sbutton" type="button" onclick="window.location.href='http://localhost:3000/searchresults?'">
